MDScreen:
    name: "editdetails"
    MDFloatLayout:
        MDIconButton:
            icon: "arrow-left"
            pos_hint: { 'center_y': 0.95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: 0.070,0.16,0.30,1
            on_release: 
                root.manager.transition.direction="right"
                root.manager.current="welcome"
        MDLabel:
            text: "Edit Details!"
            halign: 'center'
            font_style: "H5"
            size_hint_y: None
            height: self.texture_size[1]
            theme_text_color: "Custom"
            text_color: 0.070,0.16,0.30,1
            font_name: "Assets/Nunito/static/Nunito-Bold.ttf"  
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        
        MDRaisedButton:
            text: "Add Medication"
            size_hint: None, None
            size: dp(150), dp(50)
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            ripple_behavior: "auto"
            on_release: 
                root.manager.transition.direction="left"
                root.manager.current="editmed"
        MDRaisedButton:
            text: "Delete Medication"
            size_hint: None, None
            size: dp(150), dp(50)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            ripple_behavior: "auto"
            on_release: 
                root.manager.transition.direction="left"
                root.manager.current="editmed"
        MDRaisedButton:
            text: "Edit Contacts"
            size_hint: None, None
            size: dp(150), dp(50)
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            ripple_behavior: "auto"
            on_release: 
                root.manager.transition.direction="left"
                root.manager.current="editcontacts"